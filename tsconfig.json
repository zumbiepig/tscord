{
	"extends": ["@tsconfig/strictest"],
	"include": ["src/**/*"],
	"compilerOptions": {
		"rootDir": "src",
		"outDir": "dist",

		"lib": ["ESNext"],
		"target": "ESNext",
		"module": "NodeNext",
		"moduleResolution": "nodenext",
		"moduleDetection": "force",

		"verbatimModuleSyntax": true,

		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,

		"paths": {
			"@/env": ["./src/env.js"],
			"@/env/*": ["./src/plugins/*/env.js"],

			"@/api/controllers": ["./src/api/controllers/index.js"],
			"@/api/controllers/*": ["./src/plugins/*/api/controllers/index.js"],

			"@/api/middlewares": ["./src/api/middlewares/index.js"],
			"@/api/middlewares/*": ["./src/plugins/*/api/middlewares/index.js"],

			"@/api/server": ["./src/api/server.js"],

			"@/configs": ["./src/configs/index.js"],
			"@/configs/*": ["./src/plugins/*/configs/index.js"],

			"@/entities": ["./src/entities/index.js"],
			"@/entities/*": ["./src/plugins/*/entities/index.js"],

			"@/guards": ["./src/guards/index.js"],
			"@/guards/*": ["./src/plugins/*/guards/index.js"],

			"@/i18n": ["./src/i18n/index.js"],
			"@/i18n/*": ["./src/plugins/*/i18n/index.js"],

			"@/services": ["./src/services/index.js"],
			"@/services/*": ["./src/plugins/*/services/index.js"],

			"@/utils/classes": ["./src/utils/classes/index.js"],
			"@/utils/classes/*": ["./src/plugins/*/utils/classes/index.js"],

			"@/utils/decorators": ["./src/utils/decorators/index.js"],
			"@/utils/decorators/*": ["./src/plugins/*/utils/decorators/index.js"],

			"@/utils/errors": ["./src/utils/errors/index.js"],
			"@/utils/errors/*": ["./src/plugins/*/utils/errors/index.js"],

			"@/utils/functions": ["./src/utils/functions/index.js"],
			"@/utils/functions/*": ["./src/plugins/*/utils/functions/index.js"],

			"@/utils/types": ["./src/utils/types/index.d.ts"],
			"@/utils/types/*": ["./src/plugins/*/utils/types/index.d.ts"]
		}
	}
}
